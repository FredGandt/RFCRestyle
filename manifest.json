
{
	"manifest_version": 3,
	"name": "RFCRestyle",
	"description": "Control the aesthetics and improve the navigability of HTML ietf.org RFC documents. Optional automatic redirects from TXT docs.",
	"version": "3.5.3",
	"offline_enabled": false,
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"action": {
		"default_title": "Click for options",
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"24": "icon24.png",
			"32": "icon32.png"
		}
	},
	"permissions": [
		"scripting",
		"storage"
	],
	"host_permissions": [
  	"https://*.ietf.org/",
		"https://www.rfc-editor.org/"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [ {
			"matches": [
				"https://www.ietf.org/rfc/rfc*",
				"https://www.rfc-editor.org/rfc/rfc*",
				"https://datatracker.ietf.org/doc/html/rfc*"
			],
			"js": [ "init.js" ]
		}
	]
}
