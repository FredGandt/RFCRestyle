{
	"manifest_version": 2,
	"name": "RFCRestyle",
	"description": "Adjust the size, colors and layout of HTML ietf RFCs for easier reading, navigation (Fixed position ToC) and better accessibility.",
	"version": "1.2.3.1",
	"offline_enabled": false,
	"permissions": [
		"tabs",
		"storage",
		"https://*.ietf.org/"
	],
	"page_action": {
		"default_title": "Click for options",
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon16.png",
			"24": "icon24.png",
			"32": "icon32.png"
		}
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"background": {
		"scripts": [ "background.js" ]
	},
	"content_scripts": [ {
		"matches": [
			"https://www.ietf.org/rfc/rfc*",
			"https://www.ietf.org/id/draft-*",
			"https://tools.ietf.org/rfc/rfc*",
			"https://tools.ietf.org/id/draft-*",
			"https://tools.ietf.org/html/rfc*",
			"https://tools.ietf.org/html/draft-*"
		],
		"js": [ "init.js" ],
		"run_at": "document_end"
	} ]
}